<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" 
	t:menuExplanation="menuExplanation">
  
      <body>
        
  <h1>Ver Ropa</h1>

<form t:type="Form" t:id="actualizarRopaForm">
	   <t:errors/>
           <h3> El id de la ropa es: ${idRopa} </h3>
           
	   <div class="field">        
	        <t:label for="nombre"/>
	        <span class="entry">    
	            <input t:id="nombre" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label for="precio"/>
	        <span class="entry">    
	            <input t:id="precio" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
             <div class="field">        
	        <t:label for="color"/>
	        <span class="entry">    
	            <input t:id="color" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
             <div class="field">        
	        <t:label for="marca"/>
	        <span class="entry">    
	            <input t:id="marca" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	  
            
             <div class="field">        
	        <t:label for="descripcion"/>
	        <span class="entry">    
	            <input t:id="descripcion" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
            <div class="field">        
	        <t:label for="numPuntos"/>
	        <span class="entry">    
	            <input t:id="numPuntos" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
           
	    <div class="button">
	        <input type="submit" value="${message:submit}"/>        
	    </div>
	    
	</form>
    </body>
  
</html>