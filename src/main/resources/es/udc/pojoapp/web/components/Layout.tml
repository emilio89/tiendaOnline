<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	  xmlns:p="tapestry:parameter">

<head>
	<title>${pageTitle}</title>
	<link rel="StyleSheet" href="${context:/css/styles.css}"
		  type="text/css" media="all"/>
</head>

<body>

<!-- Window. -->

<div id="window">

<!-- Page title. -->

<div id="pageTitle">
	<div align="center">
       ${message:header}
	</div>
</div>

<!-- Menu. -->

<div id="menu">
	<span id="menuWelcome">
  		<t:if test="userSession">
 			${message:menu-hello} ${userSession.firstName}
            <p:else>
            	${message:menu-welcome}
            </p:else>
		</t:if>
    </span>
    -
    
    <t:if test="menuExplanation">
	 	<span id="menuExplanation">
 			${menuExplanation}
 		</span>
        <p:else>
		    <span id="menuLinks">
				<t:if test="userSession">
				    <a href="#" t:type="PageLink" t:page="user/UpdateProfile">${message:menu-updateProfile}</a> -
				    <a href="#" t:type="ActionLink" t:id="logout">${message:menu-logout}</a> -
			        <p:else>
				    	<a href="#" t:type="PageLink" t:page="user/Login">${message:menu-authenticate}</a> -
			        </p:else>
				</t:if>
			</span>
        </p:else>
 	</t:if>
   <span id="menuLinks">

     <a href="#" t:type="PageLink" t:page="Administracion">${message:menu-Administracion}</a> -
     <a href="#" t:type="PageLink" t:page="Index">INICIO</a> -

     </span>
  

</div>

<!-- Content. -->

<div id="content">
  	<t:body/>
</div>


<!-- Body footer. -->

<div id="footer">
    <div align="center">
       ${message:footer}
    </div>
</div>

<!-- End of "window" id. -->

</div>

<!-- End of HTML body. -->

</body>

</html>