<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
    
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">${jdbcDriver.className}</property>
        <property name="hibernate.connection.url">${testDataSource.url}</property>
        <property name="hibernate.connection.username">${testDataSource.user}</property>
        <property name="hibernate.connection.password">${testDataSource.password}</property>
        <!-- JDBC connection pool (use the built-in) -->
        <property name="hibernate.connection.pool_size">1</property>
        <!-- SQL dialect -->
        <property name="hibernate.dialect">${hibernate.dialect}</property>

        <!-- Show and print nice SQL on stdout -->
        <property name="hibernate.show_sql">${hibernate.show_sql}</property>
        <property name="hibernate.format_sql">${hibernate.format_sql}</property>
        <property name="hibernate.use_sql_comments">${hibernate.use_sql_comments}</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>
        
        <!--  List of persistent classes -->
        <mapping class="es.udc.pojoapp.model.userprofile.UserProfile" />
        <mapping class="es.udc.pojoapp.model.adjunto.Adjunto" />
        <mapping class="es.udc.pojoapp.model.categoria.Categoria" />
        <mapping class="es.udc.pojoapp.model.comentario.Comentario" />        
        <mapping class="es.udc.pojoapp.model.descuento.Descuento" />
        <mapping class="es.udc.pojoapp.model.etiqueta.Etiqueta" />
        <mapping class="es.udc.pojoapp.model.pedido.Pedido" />
        <mapping class="es.udc.pojoapp.model.lineapedido.LineaPedido" />
        <mapping class="es.udc.pojoapp.model.novedad.Novedad" />
        <mapping class="es.udc.pojoapp.model.puntosExtra.PuntosExtra" />
        <mapping class="es.udc.pojoapp.model.recomendacion.Recomendacion" />
        <mapping class="es.udc.pojoapp.model.ropa.Ropa" />
        <mapping class="es.udc.pojoapp.model.stocktalla.StockTalla" />


    </session-factory>
</hibernate-configuration>